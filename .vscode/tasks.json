{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "Maven: Clean Verify (Backend)",
      "command": "mvn clean verify",
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "group": "build",
      "problemMatcher": ["$msCompile"]
    },
    {
      "type": "npm",
      "label": "Angular: Serve (Frontend)",
      "script": "start",
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "problemMatcher": ["$tsc-watch"]
    },
    {
      "type": "npm",
      "label": "Angular: Test (Frontend)",
      "script": "test",
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "problemMatcher": ["$tsc"]
    },
    {
      "type": "shell",
      "label": "E2E: Run Python BDD Tests",
      "command": "cd e2e && source venv/bin/activate && behave features/",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    }
  ]
}
